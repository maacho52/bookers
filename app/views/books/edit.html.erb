<div class="contents">
 <h2>Editing Book</h2>
 <%= form_with model:@book, url:book_path(@book.id), method: :patch do |f| %>

  <div class="box">
   <% if @book.errors.any? %>
   <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
     <ul>
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
     </ul>
   <% end %>
   
   <p>Title</p>
   <%= f.text_field :title %>

   <p>Body</p>
   <%= f.text_area :body %>

<div class="contents">
 <h2>Editing Book</h2>
 <%= form_with model:@book, url:book_path(@book.id), method: :patch do |f| %>

  <div class="box">
   <p>Title</p>
   <%= f.text_field :title %>

   <p>Body</p>
   <%= f.text_area :body %>
  </div>

  <div class="submit-bottun">
   <%= f.submit 'Update Book' %>
  </div>
 <% end %>

 <div class="button">
  <span><%= link_to "Show", book_path(@book.id), class:"link"%></span>
  <span>|</span>
  <span><%= link_to "Back", '/books', class:"link" %></span>
 </div>
</div>
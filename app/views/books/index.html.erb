<%= flash[:notice] 
<h1 class="heading">Books</h1>
 <table>
    <thead>
   　 <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
   　 </tr>
    </thead>

    <tbody>
     <tr>
      <% @books.each do |book| %>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
      <% end %>
        <td><%= link_to "Show", book_path(@book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
     </tr>
    </tbody>
  </table>


<div class="links"></div>


<h1>New book</h1>
<% if @book.errors.any? %>
<%= @book.errors.count %>1 error prohibited this book from being saved:
  <ul>
      <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
      <% end %>
  </ul>
<% end %>

<%= form_with model:@book, url:'/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

